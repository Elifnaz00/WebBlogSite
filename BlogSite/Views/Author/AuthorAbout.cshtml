@model IEnumerable<EntityLayer.Concrete.Blog>

<div class="sidebar-box">
    <div class="bio text-center">
        @foreach (var x in Model)
        {
            <img src="@x.Author.AuthorImage" alt="Image Placeholder" class="img-fluid mb-5">
                <div class="bio-body">
                    <h2>@x.Author.AuthorName</h2>
                    <p class="mb-4"> @x.Author.AuthorAbout</p>
                   -
                </div>
         }

    </div>
</div>
