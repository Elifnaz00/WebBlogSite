@model IEnumerable <EntityLayer.Concrete.Category> 
@{
    ViewBag.Title = "AdminCategoryList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<!DOCTYPE html>

<html>



<body class="hold-transition sidebar-mini">



    <!-- Main content -->

    <section class="content">

        <!-- Default box -->

        <div class="card">

            <div class="card-header">

                <h3 class="card-title">Kategori Listesi</h3>

                <div class="card-tools">

                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">

                        <i class="fas fa-minus"></i>

                    </button>

                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">

                        <i class="fas fa-times"></i>

                    </button>

                </div>

            </div>

            <div class="card-body p-0">

                <table class="table table-striped projects">

                    <thead>

                        <tr>

                            <th style="width: 1%">

                                ID

                            </th>

                            <th style="width: 20%">

                                Kategori Adı

                            </th>

                            <th style="width: 15%">

                                Son Blog

                            </th>

                          

                            <th style="width: 35%" class="text-center">

                                Durum

                            </th>

                            <th style="width: 50%">

                            </th>

                        </tr>

                    </thead>

                    <tbody>
                        @foreach (var x in Model)
                        {

                        <tr>

                            <td>

                                @x.CategoryID

                            </td>

                            <td>

                                @x.CategoryName
                            </td>

                            <td>

                                <ul class="list-inline">

                                    <li class="list-inline-item">

                                        <img alt="Avatar" class="table-avatar" src="/AdminLTE-3.0.4/dist/img/avatar.png">

                                    </li>

                                    <li class="list-inline-item">

                                        <img alt="Avatar" class="table-avatar" src="/AdminLTE-3.0.4/dist/img/avatar2.png">

                                    </li>

                                    <li class="list-inline-item">

                                        <img alt="Avatar" class="table-avatar" src="/AdminLTE-3.0.4/dist/img/avatar3.png">

                                    </li>

                                </ul>

                            </td>

                            
                            @if (x.CategoryStatus == true)
                            {
                                <td class="project-state">

                                    <span class="badge badge-success">Aktif</span>

                                </td>

                            }
                            @if (x.CategoryStatus == false)
                            {
                                <td class="project-state">

                                    <span class="badge badge-warning">Pasif</span>

                                </td>

                            }


                        <td class="project-actions text-right">

                            <a class="btn btn-primary btn-sm" href="#">

                                <i class="fas fa-folder">

                                </i>

                                Yazılar

                            </a>
                            <a class="btn btn-info btn-sm" href="/Category/CategoryEdit/@x.CategoryID">

                                <i class="fas fa-alt">

                                </i>

                                Düzenle

                            </a>
                            <a class="btn btn-danger btn-sm" href="/Category/CategoryDelete/@x.CategoryID">

                                <i class="fas fa-trash">

                                </i>

                                Sil

                            </a>
                            <a class="btn btn-success btn-sm" href="/Category/CategoryActive/@x.CategoryID">
                                <i class="fas fa-atom">

                                </i>


                                Aktif Yap

                            </a>

                        </td>

                        </tr>

                        }

                    </tbody>

                </table>
                <button class="btn btn-primary" data-toggle="modal" data-target="#KategoriEkle"> Yeni Kategori Ekle</button>
                <div class="modal fade" id="KategoriEkle" tabindex="-1" role="dialog" aria-labelledby="">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                               
                            </div>
                            <form method="post" action="/Category/AdminCategoryAdd/">
                                <div class="modal-body">
                                    <div class="form-group">
                                        <label>
                                            Kategori Adı
                                            <input type="text" name="CategoryName" class="form-control" />
                                    </div>
                                    <div class="form-group">
                                        <label>Kategori Açıklaması</label>
                                        <input type="text" name="CategoryDescription" class="form-control" />
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-default" data-dismiss="modal">Kapat</button>
                                    <button type="submit" class="btn btn-primary">Ekle</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

            </div>

            <!-- /.card-body -->

        </div>

        <!-- /.card -->

    </section>

</body>

</html>
