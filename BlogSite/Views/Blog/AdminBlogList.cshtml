@model IEnumerable<EntityLayer.Concrete.Blog>
@{
    ViewBag.Title = "AdminBlogList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h2> Blog Listesi </h2>
<table class="table table-condensed table table-hover ">
    <tr>

        <th> Başlık </th>
        <th> Kategori </th>
        <th> Tarih </th>
        <th> Sil</th>
        <th> Güncelle </th>
        <th> Detaylar </th>
        <th> Yorumlar </th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>

            <td>@item.BlogTitle</td>
            <td>@item.Category.CategoryName</td>
            <td>@item.BlogDate.ToShortDateString()</td>
            <td> <a href="/Blog/DeleteBlog/@item.BlogID" class="active btn btn-danger"> Sil </a></td>
            <td> <a href="/Blog/UpdateBlog/@item.BlogID" class="btn btn-success"> Güncelle </a></td>
            <td> <a href="/Blog/BlogDetails/@item.BlogID" class="btn btn-warning"> Detaylar </a></td>
            <td> <a href="/Blog/CommentsBlog/@item.BlogID" class="btn btn-dark"> Yorumlar </a></td>

        </tr>

    }
    <tr>
        <td></td>
    </tr>
</table>

<a href="/Blog/BlogEkle/" class="btn btn-primary">Yeni Blog Ekle</a>


