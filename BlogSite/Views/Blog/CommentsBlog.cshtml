@model IEnumerable<EntityLayer.Concrete.Comment>



@{

    ViewBag.Title = "GetCommentByBlog";

    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}



<!DOCTYPE html>

<html>

<body class="hold-transition sidebar-mini">

    <!-- Site wrapper -->
    @foreach (var x in Model)
    {
        <div class="wrapper">

            <section class="content">

                <div class="container-fluid">



                    <!-- Timelime example  -->

                    <div class="row">

                        <div class="col-md-12">

                            <!-- The time line -->

                            <div class="timeline">




                                <div class="time-label">

                                    <span class="bg-red"> @(((DateTime)x.CommentDate).ToString("dd-MMM-yyyy"))</span>

                                </div>
                                <div>

                                    <i class="fas fa-comment bg-success"></i>

                                    <div class="timeline-item">

                                        

                                        <h3 class="timeline-header"><a href="#">@x.UserName</a> @x.Mail</h3>

                                        <div class="timeline-body">

                                           <p> @x.CommentText</p>

                                        </div>

                                        <div class="timeline-footer">

                                            <a class="btn btn-primary btn-sm"> Detaylar</a>

                                            <a class="btn btn-danger btn-sm">Kaldıe</a>

                                        </div>

                                    </div>

                                </div>

                                <!-- END timeline item -->

                            </div>

                        </div>

                        <!-- /.col -->

                    </div>

                </div>

                <!-- /.timeline -->

            </section>

            <!-- /.content -->

        </div>

        <!-- ./wrapper -->


    }

</body>

</html>

