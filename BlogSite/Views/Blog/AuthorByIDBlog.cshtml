@model IEnumerable<EntityLayer.Concrete.Blog>
@{
    ViewBag.Title = "AuthorByIDBlog";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>

<html>

<body class="hold-transition sidebar-mini">

    <!-- Site wrapper -->

    <div class="wrapper">

        <!-- Navbar -->
        <!-- Main content -->

        <section class="content">

            <!-- Default box -->

           <div class="card card-solid">

                <div class="card-body pb-0">

                    <div class="row d-flex align-items-stretch">
                        @foreach (var item in Model)
                        {
                            <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch">

                                <div class="card bg-light">

                                    <div class="card-header text-muted border-bottom-0">

                                        @item.Category.CategoryName

                                    </div>

                                    <div class="card-body pt-0">

                                        <div class="row">

                                            <div class="col-7">

                                                <h2 class="lead"><b>@item.BlogTitle </b></h2>

                                                <p class="text-muted text-sm">@item.BlogContent.Substring(0, item.BlogContent.Substring(0, 200).LastIndexOf(""))... </p>

                                                <ul class="ml-4 mb-0 fa-ul text-muted">

                                                    
                                                    <li class="small"><span class="fa-li"></span>  @(((DateTime)item.BlogDate).ToString("dd-MMM-yyyy"))</li>


                                                </ul>

                                            </div>

                                            <div class="col-5 text-center">

                                                <img src="@item.BlogImage" alt="" class="img-circle img-fluid">

                                            </div>

                                        </div>

                                    </div>

                                   

                                </div>

                            </div>


                        }





                    </div>

                </div>

            </div>

            <!-- /.card -->

        </section>

        <!-- /.content -->

    </div>

    <!-- /.control-sidebar -->

</body>

</html>