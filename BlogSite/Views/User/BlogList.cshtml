@model IEnumerable<EntityLayer.Concrete.Blog>
@{
    ViewBag.Title = "BlogList";
    Layout = "~/Views/Shared/_YazarLayout.cshtml";
}


@{ string color = " ";}
@{ string state = " ";}
@{ int puan = 1;}

<!DOCTYPE html>

<html>



<body class="hold-transition sidebar-mini">



    <!-- Main content -->

    <section class="content">

        <!-- Default box -->

        <div class="card">

            <div class="card-header">

                <h3 class="card-title">Blog Listem</h3>

                <div class="card-tools">

                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">

                        <i class="fas fa-minus"></i>

                    </button>

                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">

                        <i class="fas fa-times"></i>

                    </button>

                </div>

            </div>

            <div class="card-body p-0">

                <table class="table table-striped projects">

                    <thead>

                        <tr>

                            <th style="width: 1%">

                                ID

                            </th>

                            <th style="width: 20%">

                                Blog Başlığı

                            </th>



                            <th style="width: 20%" class="text-center">

                                Blog Değerlendirme Oranı

                            </th>

                            <th style="width: 8%" class="text-center">

                                Durum

                            </th>

                            <th style="width: 20%">

                            </th>

                        </tr>

                    </thead>

                    <tbody>
                        @foreach (var x in Model)
                        {
                            puan = x.BlogRating * 10;

                            if (puan >= 85)
                            {
                                color = "post-category text-white bg-success mb-3";
                                state = "Çok beğenilen";
                            }
                            if (puan >= 70 && puan <= 84)
                            {
                                color = "post-category text-white bg-info mb-3";
                                state = "Beğenilen";
                            }
                            if (puan >= 50 && puan <= 69)
                            {
                                state = "Az beğenilen";
                                color = "post-category text-white bg-warning mb-3";

                            }
                            if (puan >= 0 && puan <= 49)
                            {
                                color = "post-category text-white bg-danger mb-3";
                                state = "Beğenilmeyen";
                            }


                        <tr>

                            <td>

                                @x.BlogID

                            </td>

                            <td>

                                @x.BlogTitle
                            </td>

                           



                            <td class="project_progress">

                                <div class="progress progress-sm">

                                    <div class="progress-bar bg-green" role="progressbar" aria-volumenow="@x.BlogRating" aria-volumemin="0" aria-volumemax="10" style="width: @x.BlogRating%">

                                    </div>

                                </div>

                                <small>

                                    Aldığı Puan: @puan

                                </small>

                            </td>

                            <td class="project-state">

                                <span class="badge @color"> @state</span>

                            </td>


                            <td class="project-actions text-right">



                                <a class="btn btn-info btn-sm" href="/User/BlogUpdate/@x.BlogID">

                                    <i class="fas fa-pencil-alt">

                                    </i>

                                    Düzenle

                                </a>

                                <a class="btn btn-danger btn-sm" href="#">

                                    <i class="fas fa-trash">

                                    </i>

                                    Sil

                                </a>

                            </td>

                        </tr>

                        }

                    </tbody>

                </table>

            </div>

            <!-- /.card-body -->

        </div>

        <!-- /.card -->

    </section>

</body>

</html>
<a href="/User/BlogEkle/" class="btn btn-primary">Yeni Blog Ekle</a>
